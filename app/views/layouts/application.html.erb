<!DOCTYPE html>
<html>
<head>
  <title>Tictactoe</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <nav class="navigation">
    <%= link_to "Leader board", games_path,class: "nav" %>
    <% if current_user  %>
          <%= link_to "Profile", user_path(current_user),class: "nav" %>
          <% if games_path %>
            <%= link_to 'New Game', new_game_path, class: "nav" %>
          <%end%>

          <div class = "logoutnav">
          <%= link_to "Logout", session_path(session) , method: :delete, confirm: "Are you sure you want to log out ?", class: "nav"%> 
          </div>
      <% else %>
      
        <%= link_to "Login", new_session_path, class: "nav" %>
        
        <%= link_to "Sign-up", new_user_path, class: "nav" %>
       
      <% end %>
    
  </nav>
</header>

<%= yield %>


</body>
</html>
