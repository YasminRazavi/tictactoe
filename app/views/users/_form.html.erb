<%= form_for @user do |f| %>
  <p>
    <%= @user.errors.full_messages.join(", ") unless @user.errors.empty? %>
  </p>

  <div class="field">
   
    <%= f.text_field :name, placeholder: "name..." %>
  </div>

  <div class="field">
   
    <%= f.text_field :image, placeholder: "image url..." %>
  </div>

  <div class="field">
   
    <%= f.text_field :email, placeholder: "email..." %>
  </div>

  <div class="field">
   
    <%= f.password_field :password, placeholder: "password..." %>
  </div>

  <div class="field">
  
    <%= f.password_field :password_confirmation, placeholder:"re-type password..." %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>